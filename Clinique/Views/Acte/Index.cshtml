@model IEnumerable<AspNetCoreTemplate.Models.Acte>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Employer/template/_Content.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-idFacture="@ViewBag.idFacture">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeActe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacturePatient)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Montant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeActe.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacturePatient.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-idFacture="@ViewBag.idFacture">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
