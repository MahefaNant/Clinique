@using AspNetCoreTemplate.C_
@model AspNetCoreTemplate.Models.Depense

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Employer/template/_Content.cshtml";
}

<h1>Create</h1>

<h4>Depense</h4>
<hr />

<div class="card top-selling overflow-auto">
    <div class="card-body pb-0">
        <h5 class="card-title"></h5>
        
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdTypeDepense" class="control-label"></label>
                        <select asp-for="IdTypeDepense" class ="form-control" asp-items="ViewBag.IdTypeDepense"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Montant" class="control-label"></label>
                        <input asp-for="Montant" class="form-control" />
                        <span asp-validation-for="Montant" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input type="date" asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div class="card top-selling overflow-auto">
    <div class="card-body pb-0">
        <h5 class="card-title">Others</h5>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateFacile" method="POST">
                    <div class="form-group">
                        <label  class="control-label">TypeDense</label>
                        <select name="id_typedepense" class ="form-control" asp-items="ViewBag.IdTypeDepense"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Jour</label>
                        <input type="number" name="jour" class ="form-control" asp-items="ViewBag.IdTypeDepense" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Annee</label>
                        <input type="number" name="annee" class ="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label"></label>
                        @for (int i = 0; i < Function.Mois().Length; i++)
                        {
                            <input type="checkbox" name="mois" value="@(i+1)"/> @(Function.Mois()[i]) //
                        }
                    </div>
                    <div class="form-group">
                        <label  class="control-label">Montant</label>
                        <input type="text" name="montant" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
